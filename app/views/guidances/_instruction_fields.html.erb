<!-- 
  Dentro da partial todo conteúdo deve estar dentro de uma div .nested-fields
-->
<div class="nested-fields">
  <div class="field">
    <%= f.label :descrição %>
    <%= f.text_field :description, id: :instruction_description %>
  </div>

  <%# <div class="field"> %>
    <%# <%= f.label :imagem %> 
    <%# <%= f.text_field :image, id: :instruction_image %> 
  <%# </div> %>
  <div class="field">
    <%= f.label 'Imagem' %>
    <%= f.file_field :documents, multiple: true %>
  </div>
  <br>
  <!-- 
    link_to_remove_association é o helper que o cocoon nos fornece para deletar algum nested
  -->
  <%= link_to_remove_association "Remover instrução", f, class:'btn red darken-4'%>
 
  <br><br>
</div>