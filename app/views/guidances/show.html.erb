<p id="notice"><%= notice %></p>


<p>
  <strong>Sistema:</strong>
  <%= @guidance.system.name %>
</p>

<p>
  <% title  @guidance.title %>
</p>

<% @instructions.each do |instruction| %>
  <tr>
    <td><%= instruction.description %></td>
    <br>
    <!--<td><%#= instruction.image %></td>-->
    <br>
    <% instruction.documents.each_with_index do |document, index| %>
      <%= image_tag(document) %>
      <%= link_to("Imagem #{index + 1} ", document.url, target: '_blank') %>
      <br>
    <% end %>
  </tr>
<% end %>

<% content_for :page_actions do %>
<a><%= link_to 'Editar', edit_guidance_path(@guidance), class:'btn right azul-to'%></a>
<% end %>

<br>
<%= link_to 'Voltar', guidances_path, class:'btn azul-to' %>